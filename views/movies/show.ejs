<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
		<section>
			<h2><%=movie.title%>:</h2>
			<ul>
				<li>Title: <%=movie.title%></li>
				<li>Description: <%=movie.description%></li>
				<h2>Reviews</h2>
					<%movie.reviews.forEach((reviews)=>{%>
					<li>
						<%=reviews.body%>
					</li>

					<%}) %>
			</ul>
		</section>
		<section>
			<form action="/movies/create" method="POST">
							<input type="hidden" name="titleId" value="<%=movie._id%>">
			Create a review:<textarea name="body"></textarea><br>

			<button type="submit">Submit</button>
		</form>
		</section>
		<section>
			<form action="/movies/<%=movie._id%>?_method=DELETE" method="POST">
				<input type="submit" value="Delete Movie">
			</form>
		</section>
</body>
</html>